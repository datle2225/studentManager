@model IEnumerable<studentManager.Models.Student>

@{
    ViewData["Title"] = "Student List";
}

<h1>Student List</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
@if(Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DayOfBirth)
                </th>
                <th>
                    Profile Picture
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DayOfBirth)
                </td>
                <td>
                    @if (item.ProfilePicPath != null)
                    {
                        <img src="@item.ProfilePicPath" alt="profilePicture" width="150px" />
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
    }
        </tbody>
    </table>
}
else
{
    <h2>No student to display.</h2>
}


@section Scripts {
    @{
        System.Diagnostics.Debug.WriteLine($"\n\nModel================={Model.Any()}\n");
    }
}